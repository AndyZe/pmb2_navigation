<launch>
  <arg name="camera" default="base_rgbd_camera"/>

  <rosparam command="load" file="$(find pmb2_rgbd_sensors)/config/orbbec_astra.yaml" ns="$(arg camera)"/>

  <include file="$(find openni2_launch)/launch/openni2.launch">
    <arg name="camera" value="$(arg camera)"/>

    <!-- 
    Id got from running 
    rosrun openni2_camera list_devices 
    with only that camera plugged, with openni2_camera >= 0.2.4
     -->
    <arg name="device_id" default="16042610231" />

    <arg name="rgb_processing"              value="false"/>
    <arg name="depth_registered_processing" value="false"/>

    <arg name="publish_tf"  value="false"/>
    <arg name="respawn"     value="true"/>

  </include>
</launch>