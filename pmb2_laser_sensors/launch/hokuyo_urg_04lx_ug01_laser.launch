<launch>
  <node name="hokuyo" pkg="hokuyo_node" type="hokuyo_node" clear_params="true">
    <rosparam file="$(find pmb2_laser_sensors)/config/hokuyo_urg_04lx_ug01_laser.yaml" command="load"/>
    <remap from="scan" to="scan_raw"/>
  </node>

  <node name="laser_filter" pkg="laser_filters" type="scan_to_scan_filter_chain">
    <rosparam file="$(find pmb2_laser_sensors)/config/laser_filter.yaml" command="load"/>
    <remap from="scan"          to="scan_raw"/>
    <remap from="scan_filtered" to="scan"/>
  </node>
</launch>
